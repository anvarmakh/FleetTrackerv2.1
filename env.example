# ============================================================================
# RAILWAY DEPLOYMENT CONFIGURATION
# ============================================================================

# Railway Persistent Directory (for database persistence)
# Set this to a persistent directory path in Railway
RAILWAY_PERSISTENT_DIR=/app/data

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database Type (sqlite or postgresql)
DB_TYPE=sqlite

# SQLite Database Path (for local development)
# SQLITE_DB_PATH=./backend/database/db/fleet_management.db

# PostgreSQL Configuration (for production)
# DATABASE_URL=postgresql://username:password@host:port/database

# ============================================================================
# JWT CONFIGURATION
# ============================================================================

# JWT Secret Key (REQUIRED for production)
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration (in seconds)
# Access token: 24 hours (86400 seconds) for better UX
JWT_ACCESS_TOKEN_EXPIRY=86400
# Refresh token: 7 days (604800 seconds)
JWT_REFRESH_TOKEN_EXPIRY=604800

# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================

# Admin Secret Key (REQUIRED for production)
# This is used for admin login - change from default in production
ADMIN_SECRET_KEY=your-super-secret-admin-key-change-this-in-production

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# SMTP Configuration for password reset emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Mapbox Access Token (required for map display and geocoding)
# Get your token from: https://account.mapbox.com/access-tokens/
VITE_MAPBOX_TOKEN=your-mapbox-token-here

# Backend API URL (optional - defaults to localhost:3000)
VITE_API_URL=http://localhost:3000

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Node Environment
NODE_ENV=development

# Port Configuration
PORT=3000

# ============================================================================
# MAINTENANCE CONFIGURATION
# ============================================================================

# Maintenance Mode (true/false)
MAINTENANCE_MODE=false

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache TTL (Time To Live) in seconds
CACHE_TTL=300

# ============================================================================
# AUTO-REFRESH CONFIGURATION
# ============================================================================

# Auto-refresh interval (in milliseconds)
AUTO_REFRESH_INTERVAL=1200000

# GPS Sync interval (in milliseconds)
GPS_SYNC_INTERVAL=300000
