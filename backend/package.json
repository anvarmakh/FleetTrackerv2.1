{
  "name": "trailer-gps-backend",
  "version": "1.0.0",
  "description": "Backend API for TrailerGPS Fleet Management Platform",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "start:windows": "set NODE_ENV=production && node server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:backend": "cross-env NODE_ENV=development nodemon server.js",
    "dev:windows": "set NODE_ENV=development && nodemon server.js",
    "test": "cross-env NODE_ENV=test npm run test:unit && npm run test:integration",
    "test:unit": "jest --testMatch='**/__tests__/**/*.test.js'",
    "test:integration": "jest --testMatch='**/__tests__/**/*.integration.js'",
    "test:jwt": "jest tests/jwt-security.test.js",
    "test:all": "jest tests/",
    "lint": "eslint .",
    "security-check": "npm audit && snyk test",
    "build:production": "npm install --production",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop gps-fleet-management",
    "pm2:restart": "pm2 restart gps-fleet-management",
    "pm2:logs": "pm2 logs gps-fleet-management"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.0"
  }
}
